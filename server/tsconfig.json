{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@actions/*": ["./actions/*"],
      "@socket/*": ["./socket/*"],
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": ["customTypes", "node_modules/@types"]
  },
  "exclude": ["./node_modules"]
}
